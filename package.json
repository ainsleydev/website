{
	"name": "ainsley.dev",
	"version": "1.0.0",
	"author": "Ainsley Clark <hello@ainsley.dev>",
	"description": "Website code for ainsley.dev & ainsleyclark.com",
	"license": "BSD-3",
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"precommit": "npx lint-staged --debug",
		"setup": "pnpm install && husky install && pnpm add -g vercel && pnpm add -g svgo && go mod tidy && go install github.com/deepmap/oapi-codegen/cmd/oapi-codegen@latest && go generate ./...",
		"setup:vercel": "pnpm install && sh ./bin/os.sh",
		"dev": "concurrently --names \"ainsley-dev,ainsley-clark\" --prefix \"[{name}]\" --prefix-colors \"cyan,magenta\" \"pnpm dev:ainsley-dev\" \"pnpm dev:ainsley-clark\"",
		"dev:ainsley-dev": "hugo server --source sites/ainsley-dev --port 3000 --buildDrafts --watch",
		"dev:ainsley-clark": "hugo server --source sites/ainsley-clark --port 3001 --buildDrafts --watch",
		"build": "pnpm run build:ainsley-dev && pnpm run build:ainsley-clark",
		"build:ainsley-dev": "rm -rf sites/ainsley-dev/public && hugo --source sites/ainsley-dev --environment development",
		"build:ainsley-clark": "rm -rf sites/ainsley-clark/public && hugo --source sites/ainsley-clark --environment development",
		"build:staging": "pnpm run build:staging:ainsley-dev && pnpm run build:staging:ainsley-clark",
		"build:staging:ainsley-dev": "rm -rf sites/ainsley-dev/public && hugo --source sites/ainsley-dev --environment staging --minify",
		"build:staging:ainsley-clark": "rm -rf sites/ainsley-clark/public && hugo --source sites/ainsley-clark --environment staging --minify",
		"build:prod": "pnpm run build:prod:ainsley-dev && pnpm run build:prod:ainsley-clark",
		"build:prod:ainsley-dev": "rm -rf sites/ainsley-dev/public && hugo --source sites/ainsley-dev --environment production --minify",
		"build:prod:ainsley-clark": "rm -rf sites/ainsley-clark/public && hugo --source sites/ainsley-clark --environment production --minify",
		"deploy:prod": "vercel --prod",
		"deploy:staging": "vercel --name staging",
		"sdk": "oapi-codegen --package=sdk openapi/spec.yaml > api/_sdk/api.gen.go && swagger-typescript-api --path openapi/spec.yaml --output assets/js/api --templates openapi/templates --name SDK --module-name-first-tag",
		"clean": "rm -rf sites/*/public && hugo mod clean",
		"lint": "pnpm run lint:scss && pnpm run lint:js && pnpm run lint:go",
		"lint:scss": "npx stylelint '**/*.scss'",
		"lint:js": "eslint --fix '**/assets/**/*.{ts,tsx}'",
		"lint:go": "cd ./api/_pkg && golangci-lint run --fix ./...",
		"format": "pnpm run format:go && pnpm run format:js",
		"format:go": "go fmt ./...",
		"format:js": "prettier --write **/assets/**/*.{ts,scss,js}",
		"test": "cd ./api/_pkg && go test ./... -race $(go list ./... | grep -v /gen/ | grep -v /mocks/ | grep -v github.com/ainsleyclark/ainsley.dev) -coverprofile=../../coverage.out -covermode=atomic && cd ../../",
		"cover": "pnpm run test && go tool cover -html=coverage.out",
		"mock": "rm -rf api/_mocks && mockery --dir=api/_pkg --all --exported=true --output=./api/_mocks",
		"image": "./bin/image-optim.sh",
		"video": "./bin/video-optim.sh",
		"agents": "./bin/generate-agents-md.sh",
		"todo": "grep --exclude-dir=.vercel --exclude-dir=.gen --exclude-dir=public --exclude-dir=node_modules --exclude-dir=.git -nRo -E '\\S*[^\\.] TODO.*' ."
	},
	"dependencies": {
		"@barba/core": "^2.9.7",
		"@googlemaps/js-api-loader": "^1.15.1",
		"animejs": "^3.2.1",
		"glider-js": "^1.7.8",
		"normalize.css": "^8.0.1",
		"sharp": "^0.33.5",
		"split-type": "^0.3.3",
		"toastify-js": "^1.12.0",
		"web-vitals": "^3.3.0"
	},
	"devDependencies": {
		"@types/animejs": "^3.1.7",
		"concurrently": "^8.2.2",
		"@types/aos": "^3.0.4",
		"@types/google.maps": "^3.51.0",
		"@types/locomotive-scroll": "^4.1.0",
		"@types/node": "^18.11.18",
		"@types/toastify-js": "^1.11.1",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"hugo-bin-extended": "^0.112.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"prettier": "2.8.4",
		"prettier-plugin-go-template": "^0.0.13",
		"sharp-cli": "^4.1.0",
		"svgo": "^3.0.0",
		"stylelint": "^15.1.0",
		"stylelint-config-standard-scss": "^7.0.0",
		"swagger-typescript-api": "^13.2.16",
		"typescript": "^4.9.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,scss,js}": [
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix"
		],
		"*.go": [
			"gofmt -w"
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": [
				"./tsconfig.json"
			]
		},
		"rules": {
			"@typescript-eslint/ban-ts-comment": "off",
			"@typescript-eslint/no-var-requires": "off"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"ignorePatterns": [
			"public/**/.js",
			"staic/**"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-typescript",
			"@babel/preset-env"
		]
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"overrides": [
			{
				"files": [
					"*.html"
				],
				"options": {
					"parser": "go-template",
					"bracketSameLine": false,
					"htmlWhitespaceSensitivity": "ignore"
				}
			}
		]
	},
	"stylelint": {
		"extends": "stylelint-config-standard-scss",
		"rules": {
			"color-hex-length": null,
			"color-function-notation": "legacy",
			"comment-empty-line-before": "always",
			"no-invalid-double-slash-comments": null,
			"declaration-empty-line-before": "never",
			"at-rule-empty-line-before": null,
			"value-keyword-case": [
				"lower",
				{
					"ignoreProperties": [
						"/^\\$/"
					]
				}
			],
			"rule-empty-line-before": [
				"always",
				{
					"ignore": [
						"inside-block-and-after-rule"
					]
				}
			],
			"property-no-vendor-prefix": null,
			"selector-no-vendor-prefix": null,
			"scss/no-global-function-names": null,
			"scss/double-slash-comment-empty-line-before": null
		}
	}
}
